{% extends "::base.html.twig" %}

{% block title %} Kalories Login {% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/css/select2.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/login.css') }}" />

        <link rel="stylesheet" href="{{ asset('bundles/css/layout.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/default.css') }}" />

        <link rel="stylesheet" href="{{ asset('bundles/css/formValidation.css') }}" />
    {% endblock %}
{% block body %}

    <div class="login">
        <!-- BEGIN LOGO -->
        <div class="logo">
            <a href="index.php">
            </a>
        </div>
        <!-- END LOGO -->
        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
        <div class="menu-toggler sidebar-toggler">
        </div>
        <!-- END SIDEBAR TOGGLER BUTTON -->
        <!-- BEGIN LOGIN -->
        <div class="content">
            <div id="infoMessage"></div>
            <!-- BEGIN LOGIN FORM -->
            <form action="{{ path('login') }}" method="post" accept-charset="utf-8" class="login-form">
                <h3 class="form-title"> Login to Your Account </h3>
                {% if error %}
                    <div class="alert alert-danger">
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }} </span>
                    </div>
                {% endif %}
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                            <input type="hidden" name="go_to" value="/list" />
                        <input class="form-control placeholder-no-fix" id="username" value="{{ username }}" type="text" autocomplete="off" data-validation="required" data-validation-error-msg="Email/Username field is required." placeholder="Email/Username" name="_username"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <div class="input-icon">
                        <i class="fa fa-lock"></i>
                        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" data-validation="required" data-validation-error-msg="Password field is required." placeholder="Password" name="_password"/>
                    </div>
                </div>
                <div class="form-actions">
                    <label class="checkbox">
                    </label>
                    <button id="submit" type="submit" name="submit" class="btn green-meadow pull-right">
                        Login <i class="m-icon-swapright m-icon-white"></i>
                    </button>
                </div>
            </form>            <!-- END LOGIN FORM -->
        </div>
        <!-- END LOGIN -->
        <!-- BEGIN COPYRIGHT -->
        <div class="copyright">
            2018 &copy; MotorK Italy srl. All Rights Reserved.
        </div>

    </div>

{% endblock %}

  {% block javascripts %}

      <script src="{{ asset('bundles/scripts/jquery.form-validator.min.js') }}" type="text/javascript"></script>
      <script> $.validate(); </script>

  {% endblock %}



