<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/simple-line-icons.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/uniform.default.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/bootstrap-switch.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/custom.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/components.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/css/plugins.css') }}" />
        {% block stylesheets %}{% endblock %}

    </head>
    <body>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="container">
                <nav class="navbar navbar-inverse navbar-fixed-top" style="position: static !important;">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div id="navbar" class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li><a href="{{ path('meals_list') }}">Home</a></li>
                                <li><a href="{{ path('meals_add') }}">Create Meal</a></li>
                                <li style="left: 306%;"><a href="{{ logout_path() }}" class="btn btn-navbar"> <i class="fa fa-power-off"></i>
                                        <span class="title">Log Out</span></a></li>

                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </nav>
            </div>
        {% endif %}

        {% block body %}{% endblock %}

        <script src="{{ asset('bundles/scripts/jquery-1.11.0.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/scripts/bootstrap.min.js') }}" type="text/javascript"></script>
        {% block javascripts %}  {% endblock %}

    </body>
</html>
